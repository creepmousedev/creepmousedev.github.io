<%- include("partials/header.ejs") %>

  <% if(locals.image){ %>
      <p style="text-align: center;">Click Pokemon below for next card.</p>
      <div id="cardContainer">
        <div id="card">
          <div id="pokemonOfTheDay" style="background-color: <%=color%>;">
              <h4 id="pokemonName"><%= name %></h4>
              
              <div id="evolveContainer">
                <% if(evolvesFrom !== 'Basic'){ %>
                <img id="evolveFromImage" src=<%=evolveImage%> height="75">
                <p id="evolveFrom">Evolves from <%= evolvesFrom %></p>
                <% } else{%>
                <img id="evolveFromImage" height="75">
                <p id="evolveFrom"><%= evolvesFrom %></p>
                <% } %>
              </div>
          
            <img id="pokemonImage" src= <%= image %> height="225">
            <h5 id="pokemonType"><%= type %> type</h5>
          </div>
          <div id="back"></div>
        </div>
      </div>
  <% } %>
 
  <script src="/socket.io/socket.io.js"></script>
  <script src="/scripts/main.js"></script>
  <script src="/scripts/side.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>